    <PreferenceCategory
        android:id="@+id/aboutpage"
        android:title="@string/uxy_devs">

        <!--
        * Use uxy:twitter twitter name exactly as spelled
        * Use uxy:devIcon image stored in package
        * Use uxy:devUrl to pull image from web anywhere
        * Use uxy:donate paypal link
        * Use uxy:email for email link
        * Use uxy:gplus for google+ links
        *
        *  -->

        <com.android.settings.about.widgets.DeveloperPreference
