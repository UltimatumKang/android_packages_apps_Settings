<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:uxy="http://schemas.android.com/apk/res/com.android.settings">

    <Preference
        android:key="uxy_logo"
        android:layout="@layout/logo_row" />

